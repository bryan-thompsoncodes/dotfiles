{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Open WebUI (ai.thompson.codes)",
      "options": {
        "baseURL": "https://ai.thompson.codes/api/v1",
        "apiKey": "{file:~/.secrets/opencode-api-key}"
      },
      "models": {
        "deepseek-r1:70b": {
          "name": "DeepSeek R1 70B",
          "limit": { "context": 131072, "output": 8192 }
        },
        "deepseek-r1:32b": {
          "name": "DeepSeek R1 32B",
          "limit": { "context": 131072, "output": 8192 }
        },
        "qwen3-coder:30b": {
          "name": "Qwen3 Coder 30B",
          "limit": { "context": 262144, "output": 8192 }
        },
        "devstral:24b": {
          "name": "Devstral 24B",
          "limit": { "context": 131072, "output": 8192 }
        },
        "qwen2.5-coder:7b": {
          "name": "Qwen 2.5 Coder 7B",
          "limit": { "context": 32768, "output": 4096 }
        }
      }
    }
  },
  "instructions": [
    "README.md",
    "AGENTS.md"
  ],
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "model": "ollama/deepseek-r1:70b",
  "plugin": [
    "oh-my-opencode"
  ],
  "mcp": {
    "vads": {
      "type": "remote",
      "url": "https://vads-mcp.a6lab.ai/sse"
    }
  }
}
