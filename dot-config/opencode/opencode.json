{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "anthropic": {
      "name": "Anthropic"
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Open WebUI (ai.thompson.codes)",
      "options": {
        "baseURL": "https://ai.thompson.codes/api/v1",
        "apiKey": "{file:~/.secrets/opencode-api-key}"
      },
      "models": {
        "llama3.3:70b": {
          "name": "Llama 3.3 70B",
          "limit": { "context": 8192, "output": 2048 }
        },
        "deepseek-r1:70b": {
          "name": "DeepSeek R1 70B",
          "limit": { "context": 8192, "output": 2048 }
        },
        "qwen3-coder:30b": {
          "name": "Qwen3 Coder 30B",
          "limit": { "context": 8192, "output": 2048 }
        },
        "gpt-oss:120b": {
          "name": "gpt-oss 120B",
          "limit": { "context": 8192, "output": 2048 }
        },
        "qwen3:32b": {
          "name": "Qwen3 32B",
          "limit": { "context": 32768, "output": 4096 }
        },
        "gemma3:27b": {
          "name": "Gemma 3 27B",
          "limit": { "context": 16384, "output": 2048 }
        },
        "deepseek-coder-v2:16b": {
          "name": "DeepSeek Coder v2 16B",
          "limit": { "context": 16384, "output": 2048 }
        },
        "llama3.2-vision:90b": {
          "name": "Llama 3.2 Vision 90B",
          "limit": { "context": 131072, "output": 4096 }
        }
      }
    }
  },
  "instructions": [
    "README.md",
    "AGENTS.md"
  ],
  "permission": {
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git log*": "allow",
      "git diff*": "allow",
      "git branch*": "allow",
      "git show*": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "wc *": "allow",
      "rg *": "allow",
      "find *": "allow",
      "which *": "allow",
      "file *": "allow",
      "tree *": "allow",
      "pwd": "allow",
      "whoami": "allow",
      "env": "allow",
      "gh pr view*": "allow",
      "gh pr list*": "allow",
      "gh pr checks*": "allow",
      "gh issue view*": "allow",
      "gh issue list*": "allow",
      "gh api *": "allow",
      "jq *": "allow",
      "realpath *": "allow",
      "readlink *": "allow",
      "stat *": "allow",
      "diff *": "allow",
      "du *": "allow",
      "df *": "allow",
      "date*": "allow",
      "hostname*": "allow",
      "id *": "allow",
      "uname *": "allow",
      "sw_vers*": "allow",
      "sysctl *": "allow",
      "ps *": "allow",
      "pgrep *": "allow",
      "launchctl list*": "allow",
      "launchctl print*": "allow",
      "ollama list*": "allow",
      "ollama show*": "allow",
      "ollama ps*": "allow",
      "git remote*": "allow",
      "git rev-parse*": "allow",
      "git blame*": "allow",
      "git stash list*": "allow",
      "brew list*": "allow",
      "brew info *": "allow",
      "brew search *": "allow",
      "nix search *": "allow",
      "nix flake check*": "allow",
      "nix flake show*": "allow",
      "nix flake metadata*": "allow",
      "npm test*": "allow"
    },
    "edit": "ask"
  },
  "model": "anthropic/claude-opus-4-6",
  "plugin": [
    "oh-my-opencode"
  ],
  "mcp": {
    "vads": {
      "type": "remote",
      "url": "https://vads-mcp.a6lab.ai/sse"
    }
  }
}
