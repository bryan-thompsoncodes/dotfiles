{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "anthropic": {
      "name": "Anthropic"
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Open WebUI (ai.thompson.codes)",
      "options": {
        "baseURL": "https://ai.thompson.codes/api/v1",
        "apiKey": "{file:~/.secrets/opencode-api-key}"
      },
      "models": {
        "llama3.3:70b": {
          "name": "Llama 3.3 70B",
          "limit": { "context": 8192, "output": 2048 }
        },
        "deepseek-r1:70b": {
          "name": "DeepSeek R1 70B",
          "limit": { "context": 8192, "output": 2048 }
        },
        "qwen3-coder:30b": {
          "name": "Qwen3 Coder 30B",
          "limit": { "context": 8192, "output": 2048 }
        },
        "gpt-oss:120b": {
          "name": "gpt-oss 120B",
          "limit": { "context": 8192, "output": 2048 }
        },
        "qwen3:32b": {
          "name": "Qwen3 32B",
          "limit": { "context": 32768, "output": 4096 }
        },
        "gemma3:27b": {
          "name": "Gemma 3 27B",
          "limit": { "context": 16384, "output": 2048 }
        },
        "deepseek-coder-v2:16b": {
          "name": "DeepSeek Coder v2 16B",
          "limit": { "context": 16384, "output": 2048 }
        },
        "llama3.2-vision:90b": {
          "name": "Llama 3.2 Vision 90B",
          "limit": { "context": 131072, "output": 4096 }
        }
      }
    }
  },
  "instructions": [
    "README.md",
    "AGENTS.md"
  ],
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "model": "anthropic/claude-sonnet-4-5",
  "plugin": [
    "oh-my-opencode"
  ],
  "mcp": {
    "vads": {
      "type": "remote",
      "url": "https://vads-mcp.a6lab.ai/sse"
    }
  }
}
