#!/usr/bin/env bash
set -euo pipefail

if [[ -z "$(git config --get user.email 2>/dev/null || true)" ]]; then
  cat <<'EOF'
Error: user.email is not configured for this repository.
Make sure your ~/.gitconfig.snowboardtechie (default) and
~/.gitconfig.github (VA repos) files exist with the appropriate
user.email and user.signingkey entries. Git's includeIf directives in
~/.gitconfig should pick the right identity automatically based on the
repository path.
EOF
  exit 1
fi